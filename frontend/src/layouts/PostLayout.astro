---
import Layout from './Layout.astro'

interface Props {
  post: Post
}

const { post } = Astro.props
---

<Layout>
  <div class="mx-auto flex flex-col items-center space-y-12 max-w-5xl">
    <div
      class="flex flex-col items-center gap-14 pb-10 border-b border-gray-300"
    >
      <img
        src={`http://localhost:3000${post.image.url}`}
        alt={post.image.alt}
        class="w-[800px] h-auto rounded-lg object-cover"
      />
      <div class="text-center">
        <h3 class="font-semibold text-3xl">{post.title}</h3>
        <p class="text-gray-800">{post.description}</p>
      </div>
    </div>
    <slot />
  </div>
</Layout>
