---
interface Props {
  match: Match;
}

const { match } = Astro.props;
---

<div class="flex flex-col w-1/2 border border-gray-400 rounded-md divide-y divide-gray-400">
  <div class="flex items-center justify-between w-full p-3">
    <div class="flex flex-col items-center">
      <img
        src="https://www.svgrepo.com/show/373446/astro.svg"
        alt="tes"
        class="w-14 h-14"
      />
      <span class="text-sm font-semibold">Guajes FC</span>
    </div>
    <div class="flex items-center gap-2">
      <span class="text-4xl font-bold">{match.score.home.length}</span>
      <span class="text-4xl font-bold">-</span>
      <span class="text-4xl font-bold">{match.score.away.length}</span>
    </div>
    <div class="flex flex-col items-center">
      <img
        src={match.opponent.logo}
        alt={match.opponent.name}
        class="w-14 h-14"
      />
      <span class="text-sm font-semibold">{match.opponent.name}</span>
    </div>
  </div>
  <div class="flex items-start justify-between w-full p-3">
    <ul class="flex flex-col gap-1 text-sm">
      {
        match.score.home.map((goal) => (
          <li>
            <span>
              {goal.player} {goal.minute}'
            </span>
          </li>
        ))
      }
    </ul>
    <ul class="flex flex-col gap-1 text-sm">
      {
        match.score.away.map((goal) => (
          <li>
            <span>
              {goal.player} {goal.minute}'
            </span>
          </li>
        ))
      }
    </ul>
  </div>
</div>
